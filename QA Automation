package test_suite;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class PolitripSignUp {
https://github.com/alecualma/QA-Automation/blob/bfacf7777f2aac0d177ae24a427279b350581531/Test%20tehnic
	public static void main(String[] args) throws InterruptedException {
		System.setProperty("webdriver.chrome.driver", "C:\\Selenium\\chromedriver_win32\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("https://politrip.com/account/sign-up");
		driver.manage().window().maximize();  
		driver.findElement(By.xpath("//*[@id=\"cookiescript_accept\"]")).click();

		driver.findElement(By.name("first-name")).sendKeys("Paul");
		Thread.sleep(1500);
		driver.findElement(By.name("last-name")).sendKeys("Johnson");
		Thread.sleep(1500);
		driver.findElement(By.name("email")).sendKeys("pauljohnson@email.com");
		Thread.sleep(1500);
			JavascriptExecutor js = (JavascriptExecutor) driver;
			js.executeScript("window.scrollBy(0,350)", "");
		Thread.sleep(1500);
		driver.findElement(By.name("password")).sendKeys("Password01");
		Thread.sleep(1500);
		driver.findElement(By.id("sign-up-confirm-password-input")).sendKeys("Password01");
		Thread.sleep(1500);
		
		WebElement dropdown = driver.findElement(By.name("heard"));
		Select select = new Select(dropdown);
		
		select.selectByValue("webSearch");
		Thread.sleep(2000);
		/*select.selectByValue("socialNetworks");
		Thread.sleep(2000);
		select.selectByValue("fromAFriend");
		Thread.sleep(2000);
		select.selectByValue("other");
		Thread.sleep(2000);*/
		
		driver.findElement(By.xpath("//*[@id=\" qa_loader-button\"]")).click();
		Thread.sleep(2000);

		String expected_title = "Sign up | Politrip";
		String actual_title = driver.getTitle();
		driver.close();
		if(expected_title.equals(actual_title))
			System.out.println("Test succesful!");
		else
			System.out.println("Try again!");
	}
}
